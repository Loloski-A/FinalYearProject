<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F2F5"
    tools:context=".FirstAidActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Aid Guides"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Search Bar for Guides -->
    <EditText
        android:id="@+id/searchFirstAidEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for a condition or guide"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/rounded_corners_bg"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Placeholder for a list of first-aid topics -->
    <ListView
        android:id="@+id/firstAidTopicsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/rounded_corners_bg"
        android:padding="8dp"/>

    <Button
        android:id="@+id/backFromFirstAidButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:backgroundTint="#6B7280"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp" />

</LinearLayout>
