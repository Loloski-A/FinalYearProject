<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".ReportIncidentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report a New Incident"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- Incident Type Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incident Type"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/incidentTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Fire, Accident, Flood"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_corners_bg"
            android:layout_marginBottom="16dp"/>

        <!-- Location Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/locationEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Auto-detected or enter manually"
            android:inputType="textPostalAddress"
            android:padding="12dp"
            android:background="@drawable/rounded_corners_bg"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/getLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Current Location"
            android:backgroundTint="#007BFF"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Description Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provide details about the incident"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="top"
            android:padding="12dp"
            android:background="@drawable/rounded_corners_bg"
            android:layout_marginBottom="16dp"/>

        <!-- Photo/Video Upload Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Photo/Video (Optional)"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/captureImageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capture Image"
                android:backgroundTint="#6C757D"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:padding="12dp"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/recordVideoButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Record Video"
                android:backgroundTint="#6C757D"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:padding="12dp"
                app:cornerRadius="8dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/mediaPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_corners_bg"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:contentDescription="Preview of captured media" />

        <!-- Contact Info (Optional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Contact Information (Optional)"
            android:textColor="#555555"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/contactInfoEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name, Phone Number"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/rounded_corners_bg"
            android:layout_marginBottom="24dp"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitIncidentButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Incident Report"
            android:backgroundTint="#22C55E"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="15dp"
            app:cornerRadius="8dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to Dashboard"
            android:backgroundTint="#6B7280"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="15dp"
            android:layout_marginTop="16dp"
            app:cornerRadius="8dp" />

    </LinearLayout>
</ScrollView>
