<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F2F5"
    tools:context=".MyReportsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Incident Reports"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp" />

    <!-- Placeholder for a list of reports -->
    <ListView
        android:id="@+id/reportsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="10dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/rounded_corners_bg"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/noReportsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You haven't submitted any reports yet."
        android:textColor="#666666"
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/backToMainButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:backgroundTint="#6B7280"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginTop="24dp"
        app:cornerRadius="8dp" />

</LinearLayout>
