<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F2F5"
    android:gravity="center_horizontal"
    tools:context=".TeamProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_team_placeholder"
        android:contentDescription="Team Profile Picture"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/teamNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fire Brigade Alpha"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/teamTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type: Fire Response"
        android:textSize="18sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/teamMembersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members: 5"
        android:textSize="18sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/teamContactTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact: +254 7XX XXX XXX"
        android:textSize="18sp"
        android:textColor="#555555"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/backFromProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Dashboard"
        android:backgroundTint="#6B7280"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="15dp"
        app:cornerRadius="8dp" />

</LinearLayout>
